{
  "manifest_version": 3,
  "name": "Quick Access Office Apps",
  "version": "1.0",
  "description": "Quick access to Office.com applications",
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "static/icons/icon-16.png",
      "48": "static/icons/icon-48.png",
      "128": "static/icons/icon-128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "options_page": "pages/options.html",
  "icons": {
    "16": "static/icons/icon-16.png",
    "48": "static/icons/icon-48.png",
    "128": "static/icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["apps.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
